<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.xml.AddContact">
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-size: 25;" text="Add new contact">
            <VBox.margin>
                <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
            </VBox.margin>
        </Text>
        <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="400.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="First Name">
                    <HBox.margin>
                        <Insets left="30.0" right="30.0" />
                    </HBox.margin>
                </Text>
                <TextField fx:id="txtField_first_name" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="400.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name">
                    <HBox.margin>
                        <Insets left="30.0" right="30.0" />
                    </HBox.margin>
                </Text>
                <TextField fx:id="txtField_last_name" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="400.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Phone">
                    <HBox.margin>
                        <Insets left="30.0" right="50.0" />
                    </HBox.margin>
                </Text>
                <TextField fx:id="txtField_phone" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="400.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email">
                    <HBox.margin>
                        <Insets left="30.0" right="55.0" />
                    </HBox.margin>
                </Text>
                <TextField fx:id="txtField_gmail" text="\@gmail.com" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="400.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Birth Date">
                    <HBox.margin>
                        <Insets left="30.0" right="30.0" />
                    </HBox.margin>
                </Text>
                <DatePicker fx:id="datepicker_birth_date" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="400.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Group">
                    <HBox.margin>
                        <Insets left="30.0" right="50.0" />
                    </HBox.margin>
                </Text>
                <ChoiceBox fx:id="choiceBox_groupname" prefWidth="150.0" />
            </children>
        </HBox>
      <Text fx:id="txt_alert" fill="#c13939" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="CENTER" underline="true">
         <VBox.margin>
            <Insets left="15.0" top="10.0" />
         </VBox.margin>
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Text>
        <HBox alignment="CENTER_LEFT" prefHeight="46.0" prefWidth="400.0">
            <children>
                <Button fx:id="btn_add" mnemonicParsing="false" text="ADD">
                    <HBox.margin>
                        <Insets left="30.0" right="15.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btn_close" mnemonicParsing="false" text="CLOSE">
                    <HBox.margin>
                        <Insets left="15.0" right="15.0" />
                    </HBox.margin>
                </Button>
            </children>
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>
